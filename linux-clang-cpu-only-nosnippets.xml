<?xml version="1.0" encoding="utf-8"?>
<preset name="linux-clang-cpu-only-nosnippets" comment="Linux PhysX (cpu only, no snippets)">
  <platform targetPlatform="linux" compiler="clang" />
  <CMakeSwitches>
    <cmakeSwitch name="PX_BUILDSNIPPETS" value="False" comment="Disable snippets (OpenGL issues)" />
    <cmakeSwitch name="PX_BUILDPVDRUNTIME" value="True" comment="Generate the OmniPVD project" />
    <cmakeSwitch name="PX_GENERATE_STATIC_LIBRARIES" value="True" comment="Generate static libs" />
  </CMakeSwitches>
  <CMakeParams>
    <cmakeParam name="CMAKE_INSTALL_PREFIX" value="install/linux-clang-cpu-only-nosnippets/PhysX" comment="Install path relative to PhysX SDK root" />
  </CMakeParams>
</preset>
